{
  "name": "Jiramosity",
  "author": "Alan Andrade",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Well oiled Jira for Lumosity",
  "homepage_url": "http://lumosity.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",

  "background": {
    "scripts": ["src/bg/background.js"],
    "persistent": false
  },

  "permissions": [
    "https://gist.githubusercontent.com/*",
    "https://lumoslabs.atlassian.net/*",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://lumoslabs.atlassian.net/*"
      ],
      "run-at": "document_end",
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject/inject.js"
      ]
    }
  ]
}
